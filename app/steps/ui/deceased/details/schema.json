{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "deceased-name-dob-dod",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "minLength": 2,
      "pattern": "^[^<>]+$"
    },
    "lastName": {
      "type": "string",
      "minLength": 2,
      "pattern": "^[^<>]+$"
    },
    "dob-day": {
      "type": "integer",
      "minimum": 1,
      "maximum": 31
    },
    "dob-month": {
      "type": "integer",
      "minimum": 1,
      "maximum": 12
    },
    "dob-year": {
      "type": "integer",
      "minimum": 1000,
      "maximum": 9999
    },
    "dob-date": {
      "type": "string",
      "format": "date-time"
    },
    "dod-day": {
      "type": "integer",
      "minimum": 1,
      "maximum": 31
    },
    "dod-month": {
      "type": "integer",
      "minimum": 1,
      "maximum": 12
    },
    "dod-year": {
      "type": "integer",
      "minimum": 1000,
      "maximum": 9999
    },
    "dod-date": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "lastName",
    "firstName",
    "dob-day",
    "dob-month",
    "dob-year",
    "dod-day",
    "dod-month",
    "dod-year"
  ]
}
