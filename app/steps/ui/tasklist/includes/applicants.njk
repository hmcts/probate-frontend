{% set previousTaskStatus = fields.previousTaskStatus.value.ApplicantsTask %}

<li class="govuk-task-list__item govuk-task-list__item--with-link">
    {{ taskAction(
            prevTaskStatus = previousTaskStatus,
            status = fields.ApplicantsTask.value.status,
            nextURL = fields.ApplicantsTask.value.nextURL,
            checkYourAnswersURL = fields.ApplicantsTask.value.checkYourAnswersLink,
            content = content,
            title = content.applicantsTask | safe,
            alreadyDeclared = fields.alreadyDeclared.value
    ) }}
</li>
