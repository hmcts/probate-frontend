{% if fields.deceased.otherNames.value.length > 0 %}
<tr>
    <td colspan="2">
        <div class="grid-row">
            <div class="column-one-half">{{content.Summary.otherNamesLabel | safe}}</div>
            <div class="column-one-half">
            {% for index, otherName in fields.deceased.otherNames.value %}
                <div class="grid-row">
                    <div class="column-one-half">{{otherName.firstName.value | safe}} {{otherName.lastName.value | safe}}</div>
                </div>
            {% endfor %}
            </div>
        </div>
    </td>
    <td class="change-answer">
        {% if fields.summary.alreadyDeclared.value == 'false' %}
        <a href="{{content.DeceasedOtherNames.url}}">{{common.change}}</a>
        {%endif%}
    </td>
</tr>
{% endif %}

{% set deceasedName = [fields.deceased.firstName.value, fields.deceased.lastName.value] | join(" ") %}

{{checkanswer(
